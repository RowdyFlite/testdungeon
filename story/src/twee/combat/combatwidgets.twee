:: CombatWidgets [widget]
<<widget "startCombat">>\
    <<script>>
        let combat = window.start_combat();

    	let opponent_tags = {};
        opponent_tags["goblin"] = 1;
        opponent_tags["rat"] = 2;

        let opponents = setup.create_enemy_party(opponent_tags);
    	combat.addOpponents(opponents);
        combat.addPlayer("player", State.variables.player.combatant);

    	State.variables.combat = combat;
    	State.variables.roundLog = [];
    <</script>>\
<</widget>>